@model WebBanDoCongNghe.Models.tb_Order
@{
    ViewBag.Title = "OrderCustomerDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/OrderCustomer/IndexOrderCustomer" class="nav-link">Danh sách đặt hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/OrderCustomer/IndexOrderCustomer">Danh sách đặt hàng</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="exampleInputFile">Tên khách hàng</label>
                        <p class="form-control">@Model.tb_Customer.HoTen</p>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputFile">Email</label>
                            <p class="form-control">@Model.tb_Customer.Email</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputFile">Thời gian đặt hàng</label>
                            <p class="form-control">@String.Format("{0:dd/MM/yyyy - hh:mm:ss tt}", @Model.CreateDate)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="exampleInputFile">Số điện thoại</label>
                        <p class="form-control">@Model.tb_Customer.Phone</p>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="exampleInputFile">Mã giảm giá</label>
                        <p class="form-control"></p>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">

                        <div class="form-group">
                            <label for="exampleInputFile">Địa chỉ</label>
                            <p class="form-control">@Model.tb_Customer.Address</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputFile">Ghi chú</label>
                            <p class="form-control">@Model.GhiChu</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Danh sách sản phẩm</h3>
        </div>
        @Html.Action("Partial_OrderCustomerDetail", "OrderCustomer")
    </div>
</section>


