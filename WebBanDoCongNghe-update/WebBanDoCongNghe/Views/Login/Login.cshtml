@model WebBanDoCongNghe.Models.tb_Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Đăng nhập</a></li>
                </ul>
            </div>
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-8 text-center">
                    <h4>Đăng nhập</h4>
                </div>
                <div class="col-md-8 text-center" style="height:20px;">
                    <h6 class="text-danger">@ViewBag.error</h6>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="">Tài khoản</label>
                            @Html.TextBoxFor(x => x.TaiKhoan, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.TaiKhoan, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="">Mật khẩu</label>
                            @Html.PasswordFor(x => x.MatKhau, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.MatKhau, null, new { @class = "text-danger" })
                        </div>
                        <div class="col text-center ">
                            <input style="margin-top:25px;" type="submit" value="Đăng nhập" class="btn btn-success"><br />

                            <!DOCTYPE html>
                            <html>
                            <head>
                                <title>Đăng nhập bằng Google</title>
                                <script src="https://apis.google.com/js/platform.js" async defer></script>
                                <meta name="google-signin-client_id" content="383707341561-b390t7igf9msu4dl8svu9d693iulfvp0.apps.googleusercontent.com">
                            </head>
                            <body>
                                <div class="g-signin2" data-onsuccess="onSignIn" data-theme="dark"></div>
                                <script>
                                    function onSignIn(googleUser) {
                                        // Gửi thông tin người dùng đến máy chủ để xác thực
                                        // Sau đó, chuyển hướng hoặc thực hiện các thao tác khác
                                    }
                                </script>
                            </body>
                        </html>



                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




