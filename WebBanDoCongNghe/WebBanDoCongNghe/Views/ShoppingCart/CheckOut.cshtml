@model WebBanDoCongNghe.Models.tb_Traveler
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Thanh toán</a></li>
                </ul>
            </div>
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3>Thanh toán</h3>
                </div>
            </div>
            <hr />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div class="col-md-8">
                        <h4>Thông tin thanh toán</h4>
                        @using (Html.BeginForm("CheckOut", "ShoppingCart", FormMethod.Post, new { }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label for="">Họ và tên</label>
                                @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.HoTen, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="">Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="">Số điện thoại</label>
                                @Html.TextBoxFor(x => x.PhoneNumber1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.PhoneNumber1, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="">Số điện thoại phụ (có thể bỏ trống)</label>
                                @Html.TextBoxFor(x => x.PhoneNumber2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.PhoneNumber2, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="">Địa chỉ</label>
                                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="">Ghi chú</label>
                                @Html.TextAreaFor(x => x.Ghichu, new { @class = "form-control" })
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label for="exampleInputFile">Phương thức thanh toán</label>
                                        <div class="form-group">
                                            <div class="custom-file">
                                                @Html.DropDownListFor(x => x.MaPhuongThucThanhToan, ViewBag.PhuongThucThanhToan as SelectList, "-Chọn phương thức thanh toán", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.MaPhuongThucThanhToan, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col text-right ">
                                    <input style="margin-top:25px;" type="submit" value="Đặt Hàng" class="btn btn-success">
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-4">
                        @Html.Action("GioHangPartial", "ShoppingCart")
                    </div>
                </div>
            }
            else
            {
                <div>
                    Không có sản phẩm trong giỏ hàng! Bạn vui lòng quay lại trang <a href="/san-pham">sản phẩm</a> để mua hàng.
                </div>
            }

        </div>
    </div>
</div>

